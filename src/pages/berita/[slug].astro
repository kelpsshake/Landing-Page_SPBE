---
import Layout from '../../layouts/Layout.astro';
import { allNews } from '../../data/berita.js';

export async function getStaticPaths() {
    return allNews.map((article) => {
        return {
            params: { slug: article.slug }, 
        props: { article }, 
    };
  });
}

const { article } = Astro.props;
---

<Layout title={article.title}>
  <article>
    <header class="bg-slate-980 pt-24 pb-48">
      <div class="max-w-6xl mx-auto px-6 text-center">
        <p class="text-base font-semibold text-blue-400 uppercase tracking-wider">{article.category}</p>
        <h1 class="mt-4 text-3xl md:text-5xl font-extrabold text-white leading-tight">
          {article.title}
        </h1>
        <p class="mt-4 text-slate-400">Dipublikasikan pada {article.date}</p>
      </div>
    </header>

    <div class="max-w-5xl mx-auto px-6 -mt-32">
      <div class="bg-white rounded-xl shadow-2xl p-6 sm:p-8 md:p-10">
        <img src={article.image} alt={article.title} class="w-full h-auto rounded-lg mb-8 shadow-lg" />
        <div class="prose prose-lg max-w-none" set:html={article.content} />
      </div>
    </div>
  </article>
</Layout>