---
const galleryImages = [
  '/images/1.jpg',
  '/images/2.webp',
  '/images/3.webp',
  '/images/4.jpg',
  '/images/5.jpg',
  '/images/6.jpg',
  '/images/7.jpg',
  '/images/8.jpg',
  '/images/9.jpg',
  '/images/10.jpg'
];
---
<section id="galeri" class="bg-blue-50 py-20" data-aos="fade-up">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-10">
      <h2 class="text-3xl md:text-3xl font-bold text-slate-800">Galeri Kegiatan</h2>
      <p class="text-slate-600 mt-2 max-w-xl mx-auto">
        Cuplikan kegiatan dan inovasi layanan digital di lingkungan Pemerintah Kabupaten Bandung.
      </p>
    </div>

    <div class="relative overflow-hidden group">
        <div class="flex gap-6 animate-pingpong group-hover:pause-animation no-scrollbar">
          {galleryImages.map((src, i) => (
            <div class="flex-shrink-0 w-60 h-80 rounded-xl overflow-hidden shadow-md bg-gray-200 transform transition duration-300 hover:scale-105">
              <img 
                src={src} 
                alt={`Galeri ${i + 1}`} 
                class="w-full h-full object-cover"
                loading="lazy" 
              />
            </div>
          ))}
        </div>
      </div>
  </div>

  <style>
    @keyframes pingpong {
      0% { transform: translateX(0); }
      50% { transform: translateX(-50%); }
      100% { transform: translateX(0); }
    }

    .animate-pingpong {
      animation: pingpong 8s ease-in-out infinite;
    }

    .pause-animation:hover {
      animation-play-state: paused;
    }

    .no-scrollbar::-webkit-scrollbar {
      display: none;
    }
    .no-scrollbar {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }
  </style>
</section>
